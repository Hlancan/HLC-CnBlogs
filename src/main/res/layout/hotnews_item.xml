<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hot_news_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:padding="15px">

    <TextView
        android:id="@+id/tv_hotnews_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/hotnews_title_size"
        android:paddingBottom="5px"
        android:text="三星s7又爆炸啦"/>

    <TextView
        android:id="@+id/tv_hotnews_source_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5px"
        android:text="来源：腾讯新闻"/>

    <TextView
        android:id="@+id/tv_hotnews_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5px"
        android:text="据新华报记者某某某报道，于今天上午10点..."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hotnews_published"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-11-01 10:00:00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|浏览:"/>
        <TextView
            android:id="@+id/tv_hotnews_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读：9999+"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|评论:"/>
        <TextView
            android:id="@+id/tv_hotnews_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论：1563"/>
    </LinearLayout>

</LinearLayout>